/*自定义底部栏*/
.tabBar{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 105rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  /* overflow: scroll !important; */
}
.tabBarNav{
  width: 100%;
  height: 100%;
}
.tabBar .tabBarItem{
  flex: 1;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  align-items:center;
}
.tabBar .tabBarItem .tabBarImg{
  margin-top: 4rpx; 
  font-size: 22px;
  color: #979797;
  width: 50rpx;
  height: 50rpx;
}
.tabBar .tabBarItem .tabText{
  line-height: 1.7;
  font-size: 12px;
  color: #979797;
}
/* .tabBarSelected .tabBarImg{
  color: #489ad9 !important;
} */
.tabBarSelected .tabText{
  color: #489ad9 !important;
}
.tabBarSpecial .tabBarImg{
  position: absolute;
  top: -49rpx;
  width: 120rpx !important;
  height: 120rpx !important;
}
.tabBarSpecial .tabText{
  margin-top: 61rpx;
}